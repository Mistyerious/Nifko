{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./",
    "rootDir": "src",
    "outDir": "out"
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["src/**/*.ts"]
}